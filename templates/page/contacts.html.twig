{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block left_sidebar %}
{% endblock %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="layout-full">
                {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_breadcrumbs('Contacts', null)} %}
                <h1 class="main-title">Contacts</h1>
                <div class="contacts">
                    <div class="contacts-wrapper">
                        <div class="contacts-info">
                            <h2>LITHUANIA</h2>
                            <dl class="contacts-list">
                                <div>
                                    {{ address|nl2br }}
                                </div>
                                <div>
                                    <dt>Phone:</dt>
                                    <dd>
                                        {{ phones|nl2br }}
                                    </dd>
                                </div>
                                <div>
                                    <dt>Email:</dt>
                                    <dd><a href="mailto:{{ email }}">{{ email }}</a></dd>
                                </div>
                                <div>
                                    <dt>Web:</dt>
                                    <dd><a href="{{ webSite }}">{{ webSite }}</a></dd>
                                </div>
                                <div>
                                    <dt>Customer service:</dt>
                                    <dd><a href="mailto:{{ customerService }}">{{ customerService }}</a></dd>
                                </div>
                            </dl>
                        </div>
                        <div class="contacts-about">
                            <h2>About Us</h2>
                            {{ about|nl2br }}
                            <div class="social">
                                {% include 'blocks/social_links__block.html.twig' with {'linkedInUrl': socialLinks.linkedIn, 'instagramUrl': socialLinks.instagram, 'youtubeUrl': socialLinks.youtube} %}
                            </div>
                        </div>
                    </div>
                    <div id="map" class="contacts-map">
                        <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAa8apZ1KI-NADzJFhak0WsMYNYAF2wUNs&q=Parko+g.+3,+Avižienių+k.+,+LT-14198,+Vilniaus+raj&zoom=10" width="100%" height="530" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="partners">
                    <h2>Partners</h2>
                    <div class="partners-grid">
                        {% for partner in partners %}
                            <div class="partner-item">
                                <h2>{{ partner.name }}</h2>
                                <div class="partner-img">
                                    <img src="{{ asset('uploads/partner/' ~ partner.logo) }}" alt="{{ partner.name }}">
                                </div>
                                <div class="partner-content">
                                    {{ partner.contacts|raw }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}