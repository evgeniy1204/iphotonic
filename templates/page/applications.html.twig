{% extends 'base.html.twig' %}

{% block left_sidebar %}
{% endblock %}
{% block body %}
    <main class="main">
        <div class="container">
            <div class="layout-full">
                {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_breadcrumbs('Applications', null)} %}
                <h1 class="main-title">Applications</h1>
                <div class="applications">
                    {% for application in applications %}
                        <div class="applications-item">
                            <a class="applications-item-link" href="#">
                                <div class="applications-item-image">
                                    <img src="{{ asset('uploads/application/' ~ application.preview) }}" alt="{{ application.name }}">
                                </div>
                                <h2 class="applications-item-title">{{ application.name }}</h2>
                                <div class="applications-item-info">
                                    {{ application.text|raw }}
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>

{% endblock %}
