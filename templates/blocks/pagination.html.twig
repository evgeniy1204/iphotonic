{% set currentPage = app.request.get('page') ?: 1 %}
{% if pagination.totalPages > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% set prevPageNum = currentPage - 1 %}
            {% if prevPageNum > 0 %}
                <li class="pagination-item">
                    <a class="pagination-prev" href="{{ path(route, {'page' : currentPage - 1}) }}"></a>
                </li>
            {% endif %}
            {% for i in range(1, pagination.totalPages) %}
                <li class="pagination-item">
                    <a class="pagination-link{% if currentPage == i %} active{% endif %}" href="{{ path(route, {'page': i }) }}">{{ i }}</a>
                </li>
            {% endfor %}
            {% set nextPageNum = currentPage + 1 %}
            {% if nextPageNum <= pagination.totalPages %}
                <li class="pagination-item">
                    <a class="pagination-next" href="{{ path(route, {'page' : nextPageNum}) }}"></a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}