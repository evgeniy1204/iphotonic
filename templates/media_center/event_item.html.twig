{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <main class="main">
        <div class="container">

            <div class="layout-full">

                <div class="post">

                    {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_events_breadcrumbs(event.title)} %}


                    <h1 class="main-title">{{ event.title }}</h1>

                    <div class="post-content">
                        <p>{{ event.summary|nl2br }}</p>

                        <p class="post-image">
                            <img src="{{ asset('uploads/event_preview/' ~ event.preview) }}" width="1000" alt="{{ event.title }}">
                        </p>

                        <p>{{ event.text|raw }}</p>
                    </div>

                    {% if otherEvents %}
                    <div class="post-more">
                        <div class="caption">Read more</div>

                        <div class="event-cards event-cards--list">
                            <div class="event-cards-wrapper">
                                {% for item in otherEvents %}
                                    {% if item.id != event.id %}
                                        <div class="event-card">
                                            <div class="event-card-image">
                                                <img src="{{ asset('uploads/event_preview/' ~ item.preview) }}" width="620" height="504" alt="{{ item.title }}" loading="lazy">
                                            </div>

                                            <div class="event-card-info">
                                                <h2 class="event-card-title">
                                                    <a class="event-card-link" href="{{ path('app_event_item', {'slug': item.slug}) }}">{{ item.title }}</a>
                                                </h2>

                                                <div class="event-card-desc">
                                                    <p class="event-card-text">
                                                        {{ item.summary|nl2br }}
                                                    </p>

                                                    <p class="event-card-date">{{ item.createdEventStartAt|date('d')}} - {{ item.createdEventEndAt|date('F j Y')}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
