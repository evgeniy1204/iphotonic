{% extends 'base.html.twig' %}

{% block title %}{{ media.title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
{% endblock %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="layout-full">
                <div class="post">
                    {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_media_breadcrumbs(media.title)} %}
                    <h1 class="main-title">{{ media.title }}</h1>
                    <div class="post-content">
                        {{ media.description|raw }}
                    </div>
                    {% if nextMedia %}
                    <div class="post-more">
                        <div class="caption">View more</div>
                        {% include 'blocks/media_center/photo_item__block.html.twig' with {'media': nextMedia} %}
                    </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </main>
{% endblock %}
{% block javascripts %}
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper(".js-post-swiper", {
            slidesPerView: 1,
            pagination: {
                el: '.post-swiper-pagination',
                clickable: true,
            },
        });
    </script>
{% endblock %}