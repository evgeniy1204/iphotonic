{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="layout-full">
                {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_events_breadcrumbs('Upcoming Events')} %}
                <h1 class="main-title">Upcoming Events</h1>
                <div class="event-cards event-cards--list">
                    <div class="event-cards-wrapper">
                        {% for item in pagination.items %}
                            <div class="event-card">
                                <div class="event-card-image">
                                    <img src="{{ asset('uploads/event_preview/' ~ item.preview) }}" width="620" height="504" alt="" loading="lazy">
                                </div>
                                <div class="event-card-info">
                                    <h2 class="event-card-title">
                                        <a class="event-card-link" href="{{ path('app_event_item', {'slug': item.slug}) }}">{{ item.title }}</a>
                                    </h2>
                                    <div class="event-card-desc">
                                        <p class="event-card-text">
                                        {{ item.summary|nl2br }}
                                        </p>
                                        <p class="event-card-date">{{ item.createdEventStartAt|date('d')}} - {{ item.createdEventEndAt|date('F j Y')}}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
