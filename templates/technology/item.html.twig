{% extends 'base.html.twig' %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="layout">
                <div class="layout-content">
                    {% include 'blocks/breadcrumbs.html.twig' with {'breadcrumbs': build_breadcrumbs(technology.name, technology)} %}
                    <h1 class="main-title">{{ technology.name }}</h1>
                    {% include 'blocks/current_level_menu.html.twig' with {'currentLevelMenuItems': generate_technology_category_one_level_menu(technology)} %}

                    <div class="content">
                        {{ technology.content|raw }}
                    </div>

                    {% include 'blocks/technology/technology_cards_block.html.twig' with {'technologies': technology.children} %}
                    {% include 'blocks/product/equipments.html.twig' with {'equipments': products} %}
                </div>

                {% include 'menu/left_sidebar.html.twig' with {'menuItems': generate_technology_category_menu() } %}
            </div>
        </div>
    </main>
{% endblock %}
